<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_marginBottom="2dp"
    >



    <android.support.v7.widget.CardView
        android:id="@+id/cvNewsData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/ivLogoImage"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_updates"
                    android:scaleType="fitCenter"
                    android:layout_gravity="top"
                    android:layout_weight="0.1"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <hackearth.com.hackearthtest.font.MediumFont
                        android:id="@+id/mfTitleString"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="India won the match with 3 wickets remaining...!!"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <hackearth.com.hackearthtest.font.NormalFont
                            android:id="@+id/nfPublisher"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Times of India"/>

                        <hackearth.com.hackearthtest.font.NormalFont
                            android:id="@+id/nfCategory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Category : Animals"/>


                    </LinearLayout>

                    <hackearth.com.hackearthtest.font.NormalFont
                        android:id="@+id/nfHostName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="www.visirx.in" />

                    <hackearth.com.hackearthtest.font.NormalFont
                        android:id="@+id/nfTimestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-08-09"
                        android:layout_gravity="right"
                        android:textColor="@color/gray_light"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/ivFavorite"
                    android:layout_width="0dp"
                    android:scaleType="fitCenter"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_favorite_yellow"
                    android:layout_gravity="right"
                    android:layout_weight="0.1"/>



            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>